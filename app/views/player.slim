  function get_skill_id_by_name(name){
    for (var i in player['skills']) {
      if(player['skills'][i]['name']==name){
        return i;
      }
    }
    return -1;
  }

  function skill_modify(c,mod){
    var v = get_over_value();
    var skill = get_skill_id_by_name(c);
