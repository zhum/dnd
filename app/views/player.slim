  function on_websocket_open(ws){
    ws.send(secret+': get_player');
    ws.send(secret+': get_prefs');
  }

  function hp_plus(){
    var v = get_over_value();
    player['hp'] += v;
    ws.send(secret+': hp='+player['hp']);
  }

  function hp_minus(){
    var v = get_over_value();
    if(player['hp']-v>=0){
      player['hp'] -= v;
      ws.send(secret+': hp='+player['hp']);
    }
  }

  function hp_set(){
    var v = get_int_value('over_value');
    if(!Number.isNaN(v) && v>=0){
      player['hp'] = v;
      ws.send(secret+': hp='+player['hp']);
    }
  }

